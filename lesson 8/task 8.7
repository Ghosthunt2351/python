class Complex:
    def __init__(self, number):
        self.number = number

    def __add__(self, other):
        x_1, y_1 = str(self.number).split('+')
        x_2, y_2 = str(other.number).split('+')
        return f'{int(x_1) + int(x_2)}+{int(y_1[:-1]) + int(y_2[:-1])}j'

    def __mul__(self, other):
        x_1, y_1 = str(self.number).split('+')
        x_2, y_2 = str(other.number).split('+')
        return f'{int(x_1) * int(x_2) - int(y_1[:-1]) * int(y_2[:-1])}+{int(x_1) * int(y_2[:-1]) + int(x_2) * int(y_1[:-1])}j'


