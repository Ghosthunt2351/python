import json

with open("text_7.txt", 'r', encoding='utf-8') as f_t7:
    firms = {}
    while True:
        line = f_t7.readline().split()
        if line:
            firms[line[0]] = float(line[2]) - float(line[3])
        else:
            break
    sum_profit = 0
    for firm, profit in firms.items():
        if profit > 0:
            sum_profit += profit
    firms_list = [firms, {'avarage_profit': sum_profit}]
    print(firms_list)
    with open("text_7.json", 'w', encoding='utf-8') as json_f:
        json.dump(firms_list, json_f, indent=4, ensure_ascii=False)
