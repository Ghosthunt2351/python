def summa(list):
  sum = 0
  for i in list:
    sum += int(i)
  return sum

numbers = input('Введите ряд чисел, разделенных пробелом:').split(' ')
sum = 0
for i in numbers:
  if i.isdigit() == False:
    numbers.remove(i)
sum = summa(numbers)
print(f'Сумма всех чисел равна {sum}')
